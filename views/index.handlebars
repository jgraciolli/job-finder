<div id="top-container" class="container-fluid">
  <h1 id="main-title" class="text-center">Find the job you've always wanted!</h1>
  <p id="main-subtitle" class="text-center">We have the largest number of tech job openings on the market â€” all remote!</p>
  <form id="search-form" class="form-inline" action="/" method="GET">
    <div class="form-group col-md-10">
      <input type="text" class="form-control" id="job" name="job" placeholder="Search for your desired position......">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>
</div>
<main>
  <div id="jobs-container" class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if search}}
          <h2 id="job-list-title">Search results for: {{search}}</h2>
        {{else}}
          <h2 id="job-list-title">Explore our featured positions:</h2>
        {{/if}}
        <ul id="job-list" class="list-group">
          {{#each jobs}}
            <li class="list-group-item {{#if dataValues.new_job }}new-job{{/if}}">
              <img src="/img/company.svg" alt="Company">
              <p>{{dataValues.company}}</p>
              <h2>{{dataValues.title}}</h2>
              <p>U${{dataValues.salary}}</p>
              <span class="new-job-label">New</span>
              <a class="btn btn-primary" href="/jobs/view/{{dataValues.id}}">View job</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>